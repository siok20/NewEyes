<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/margin_bubble">

    <!-- Nombre del usuario (alineado a la izquierda) -->
    <TextView
        android:id="@+id/text_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Usuario1"
        android:textColor="@android:color/holo_red_dark"
        android:textStyle="bold"
        android:textSize="12sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Imagen del mensaje (alineada a la izquierda, debajo del nombre) -->
    <ImageView
        android:id="@+id/imageMessageOther"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:background="@drawable/bg_bubble_other"
        android:contentDescription="Imagen del mensaje"
        app:layout_constraintTop_toBottomOf="@id/text_username"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
