<!-- res/values/themes.xml -->
<resources>

    <!-- Tema base para tu app -->
    <style name="AppTheme" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">#2196F3</item> <!-- Azul -->
        <item name="colorOnPrimary">#FFFFFF</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:background">#121212</item>
    </style>

    <!-- Tema de alto contraste -->
    <style name="AppTheme.HighContrast" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">#000000</item>
        <item name="colorOnPrimary">#FFFF00</item> <!-- Amarillo brillante -->
        <item name="android:textColor">#FFFF00</item>
        <item name="android:background">#000000</item>
    </style>

    <!-- Tema base claro (default) -->
    <style name="AppTheme.Light" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Colores claros -->
        <item name="colorPrimary">#6200EE</item>
        <item name="colorPrimaryVariant">#3700B3</item>
        <item name="colorOnPrimary">#FFFFFF</item>
        <item name="android:background">#FFFFFF</item>
        <item name="android:textColor">#000000</item>
        <!-- Otras propiedades que definas -->
    </style>

    <!-- Tema base oscuro -->
    <style name="AppTheme.Dark" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Colores oscuros -->
        <item name="colorPrimary">#BB86FC</item>
        <item name="colorPrimaryVariant">#3700B3</item>
        <item name="colorOnPrimary">#000000</item>
        <item name="android:background">#121212</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <!-- Tema alto contraste claro -->
    <style name="AppTheme.Light.HighContrast" parent="AppTheme.Light">
        <!-- Cambios respecto al tema claro para mayor contraste -->
        <item name="colorPrimary">#000000</item>         <!-- Negro sólido -->
        <item name="colorOnPrimary">#FFFFFF</item>       <!-- Texto blanco sobre negro -->
        <item name="android:textColor">#FFFFFF</item>    <!-- Texto blanco -->
        <item name="android:background">#000000</item>   <!-- Fondo negro -->
    </style>

    <!-- Tema alto contraste oscuro -->
    <style name="AppTheme.Dark.HighContrast" parent="AppTheme.Dark">
        <!-- Cambios respecto al tema oscuro para alto contraste -->
        <item name="colorPrimary">#FFFFFF</item>         <!-- Blanco sólido -->
        <item name="colorOnPrimary">#000000</item>       <!-- Texto negro sobre blanco -->
        <item name="android:textColor">#000000</item>    <!-- Texto negro -->
        <item name="android:background">#FFFFFF</item>   <!-- Fondo blanco -->
    </style>


</resources>
